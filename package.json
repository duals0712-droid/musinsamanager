{
  "name": "moonager",
  "version": "1.0.5",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5180 TS_NODE_PROJECT=tsconfig.electron.json electronmon -r ts-node/register/transpile-only ./main.ts --watch main.ts --watch preload.ts",
    "build": "vite build && npm run build:main",
    "build:main": "tsc -p tsconfig.electron.json",
    "make": "npm run build && electron-builder",
    "lint": "tsc --noEmit",
    "preview": "vite preview"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.308.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "postcss": "^8.4.31",
    "@types/semver": "^7.5.8",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.duals0712.musinsamanager",
    "productName": "Musinsa Manager",
    "artifactName": "musinsa-manager-${version}-setup.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "!node_modules/.cache"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "Musinsa Manager",
      "runAfterFinish": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "duals0712-droid",
        "repo": "musinsamanager"
      }
    ]
  }
}
